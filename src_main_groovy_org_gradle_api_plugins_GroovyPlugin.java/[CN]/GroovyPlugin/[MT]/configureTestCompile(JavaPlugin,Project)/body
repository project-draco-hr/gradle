{
  GroovyCompile testCompile=(GroovyCompile)javaPlugin.configureTestCompile((Compile)project.createTask(GUtil.map("type",GroovyCompile.class,"overwrite",true),TEST_COMPILE),(Compile)project.task(COMPILE),DefaultConventionsToPropertiesMapping.TEST_COMPILE,project.getConfigurations());
  testCompile.setGroovyClasspath(project.getConfigurations().get("groovy"));
  testCompile.setDescription("Compiles the Java and Groovy test source code.");
  testCompile.conventionMapping(GUtil.map("groovySourceDirs",new ConventionValue(){
    public Object getValue(    Convention convention,    IConventionAware conventionAwareObject){
      return groovy(convention).getGroovyTestSrcDirs();
    }
  }
));
}
