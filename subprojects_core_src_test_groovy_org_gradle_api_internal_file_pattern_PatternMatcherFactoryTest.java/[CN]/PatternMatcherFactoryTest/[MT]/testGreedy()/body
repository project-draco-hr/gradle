{
  matcher=PatternMatcherFactory.getPatternMatcher(false,true,"**");
  assertThat(matcher,matchesFile());
  assertThat(matcher,matchesFile("a"));
  assertThat(matcher,matchesFile("a","b","c"));
  matcher=PatternMatcherFactory.getPatternMatcher(false,true,"**/");
  assertThat(matcher,matchesFile());
  assertThat(matcher,matchesFile("a"));
  assertThat(matcher,matchesFile("a","b","c"));
  matcher=PatternMatcherFactory.getPatternMatcher(false,true,"**/**/**");
  assertThat(matcher,matchesFile());
  assertThat(matcher,matchesFile("a"));
  assertThat(matcher,matchesFile("a","b","c"));
}
