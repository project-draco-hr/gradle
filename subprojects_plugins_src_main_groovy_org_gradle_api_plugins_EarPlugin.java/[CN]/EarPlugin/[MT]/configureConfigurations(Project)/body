{
  ConfigurationContainer configurations=project.getConfigurations();
  Configuration moduleConfiguration=configurations.add(DEPLOY_CONFIGURATION_NAME).setVisible(false).setTransitive(false).setDescription("Classpath for deployable modules, not transitive.");
  Configuration earlibConfiguration=configurations.add(EARLIB_CONFIGURATION_NAME).setVisible(false).setDescription("Classpath for module dependencies.");
  configurations.getByName(Dependency.DEFAULT_CONFIGURATION).extendsFrom(moduleConfiguration,earlibConfiguration);
}
