{
  MulticastConnection<DiscoveryMessage> connection=new MulticastConnection<DiscoveryMessage>(broadcastAddress,new DiscoveryProtocolSerializer());
  multiCastConnection=new AsyncConnectionAdapter<DiscoveryMessage>(connection,new DiscardingFailureHandler<DiscoveryMessage>(LoggerFactory.getLogger(MulticastConnection.class)),get(ExecutorFactory.class));
  return multiCastConnection;
}
