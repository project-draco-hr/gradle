{
  lock.lock();
  try {
    LOGGER.debug("Stop requested. The daemon is running a build: " + isBusy());
    if (!isStoppingOrStopped()) {
      onStopRequested.run();
    }
    stoppingOrStopped=true;
    onStop.run();
    stopped=true;
    condition.signalAll();
  }
  finally {
    lock.unlock();
  }
}
