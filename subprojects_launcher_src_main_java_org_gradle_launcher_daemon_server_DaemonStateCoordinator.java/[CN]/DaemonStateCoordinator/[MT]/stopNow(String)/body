{
  lock.lock();
  try {
switch (state) {
case Running:
case Broken:
case StopRequested:
      LOGGER.debug("Marking daemon stopped due to {}. The daemon is running a build: {}",reason,isBusy());
    setState(State.Stopped);
  break;
case Stopped:
break;
default :
throw new IllegalStateException("Daemon is in unexpected state: " + state);
}
}
  finally {
lock.unlock();
}
}
