{
  ShutdownHookActionRegister.removeAction(shutdownHookAction);
  lock.lock();
  try {
    if (failureCause != null) {
      if (this.state == ExecHandleState.STARTING) {
        this.failureCause=new ExecException(String.format("A problem occurred starting %s.",displayName),failureCause);
      }
 else {
        this.failureCause=new ExecException(String.format("A problem occurred waiting for %s to complete.",displayName),failureCause);
      }
    }
    setState(state);
    this.exitCode=exitCode;
  }
  finally {
    lock.unlock();
  }
  LOGGER.debug("Process finished for {}.",displayName);
  broadcast.getSource().executionFinished(this);
  broadcast.stop();
  executor.requestStop();
}
