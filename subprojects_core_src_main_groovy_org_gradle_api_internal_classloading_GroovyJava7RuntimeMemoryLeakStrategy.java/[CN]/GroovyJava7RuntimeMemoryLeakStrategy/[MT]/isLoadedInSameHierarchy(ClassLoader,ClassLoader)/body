{
  while (ld != null && ld != gradleClassInfoClassLoader) {
    if (ld == loader) {
      return true;
    }
    if (ld instanceof MultiParentClassLoader) {
      for (      ClassLoader classLoader : ((MultiParentClassLoader)ld).getParents()) {
        if (isLoadedInSameHierarchy(loader,classLoader)) {
          return true;
        }
      }
    }
    ld=ld.getParent();
  }
  return false;
}
