{
  DefaultGroovyPomFilterContainer pomFilterContainer=new DefaultGroovyPomFilterContainer(new DefaultMavenPomFactory(scopeMapping));
  return new DefaultGroovyMavenDeployer(name,pomFilterContainer,new DefaultArtifactPomContainer(pomDir,pomFilterContainer,new DefaultPomFileWriter(new DefaultPomWriter(new DefaultPomHeaderWriter(),new DefaultPomModuleIdWriter(),new DefaultPomDependenciesWriter(new DefaultPomDependenciesConverter(new DefaultExcludeRuleConverter())))),new DefaultArtifactPomFactory()),configurationContainer);
}
