{
  DefaultGroovyPomFilterContainer pomFilterContainer=new DefaultGroovyPomFilterContainer(new DefaultMavenPomFactory(scopeMapping,new DefaultPomDependenciesConverter(new DefaultExcludeRuleConverter())));
  return new DefaultGroovyMavenDeployer(name,pomFilterContainer,new DefaultArtifactPomContainer(pomMetaInfoProvider,pomFilterContainer,new DefaultArtifactPomFactory()),configurationContainer);
}
