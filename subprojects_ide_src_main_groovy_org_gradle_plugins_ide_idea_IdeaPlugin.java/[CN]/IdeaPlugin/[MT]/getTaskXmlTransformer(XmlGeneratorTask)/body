{
  Method method=null;
  try {
    method=task.getClass().getMethod("getXmlTransformer");
    method.setAccessible(true);
    return (XmlTransformer)method.invoke(task);
  }
 catch (  Exception e) {
    throw new UncheckedException(e);
  }
 finally {
    if (method != null) {
      try {
        method.setAccessible(false);
      }
 catch (      SecurityException ignore) {
      }
    }
  }
}
