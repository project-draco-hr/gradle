{
  boolean wasStarted=startLongRunningOperation();
  try {
    if (wasStarted) {
      cacheManager.onEndWork();
    }
    try {
      return action.create();
    }
  finally {
      if (wasStarted) {
        cacheManager.onStartWork(this.operationDisplayName);
      }
    }
  }
  finally {
    finishLongRunningOperation(wasStarted);
  }
}
