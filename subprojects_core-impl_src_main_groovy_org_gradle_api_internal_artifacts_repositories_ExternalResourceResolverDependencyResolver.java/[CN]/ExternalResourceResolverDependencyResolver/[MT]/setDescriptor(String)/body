{
  if (BasicResolver.DESCRIPTOR_REQUIRED.equals(descriptorRule)) {
    setAllownomd(false);
  }
 else   if (BasicResolver.DESCRIPTOR_OPTIONAL.equals(descriptorRule)) {
    setAllownomd(true);
  }
 else {
    throw new IllegalArgumentException("unknown descriptor rule '" + descriptorRule + "'. Allowed rules are: "+ Arrays.asList(new String[]{BasicResolver.DESCRIPTOR_REQUIRED,BasicResolver.DESCRIPTOR_OPTIONAL}));
  }
}
