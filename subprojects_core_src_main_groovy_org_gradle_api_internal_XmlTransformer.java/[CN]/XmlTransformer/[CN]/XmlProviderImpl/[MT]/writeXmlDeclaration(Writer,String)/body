{
  try {
    writer.write("<?xml version=\"1.0\"");
    if (encoding != null) {
      writer.write(" encoding=\"");
      writer.write(encoding);
      writer.write("\"");
    }
    writer.write("?>");
    writer.write(SystemProperties.getLineSeparator());
  }
 catch (  IOException e) {
    throw UncheckedException.throwAsUncheckedException(e);
  }
}
