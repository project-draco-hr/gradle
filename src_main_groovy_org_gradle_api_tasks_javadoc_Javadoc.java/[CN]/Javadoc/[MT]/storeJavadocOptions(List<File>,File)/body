{
  options.sourcepath(existingSourceDirs).directory(getDestinationDir()).classpath(getClasspath()).classpath((File)getProject().getConvention().getProperty("classesDir")).windowTitle("\"" + getTitle() + "\"");
  if (maxMemory != null)   options.jFlags("-Xmx" + maxMemory);
  BufferedWriter optionsFileWriter=null;
  try {
    optionsFileWriter=new BufferedWriter(new FileWriter(javadocOptionsFile));
    options.toOptionsFile(optionsFileWriter);
  }
  finally {
    IOUtils.closeQuietly(optionsFileWriter);
  }
}
