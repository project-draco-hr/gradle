{
  execHandle=new DefaultExecHandle(tmpDir,JavaEnvUtils.getJdkExecutable("javadoc"),Arrays.asList("-verbose","-d",new File("tmp/javadocTmpOut").getAbsolutePath(),"-sourcepath","src/main/groovy","org.gradle"),0,System.getenv(),System.out,System.err,new ByteArrayInputStream(new byte[0]),null);
  execHandle.start();
  execHandle.abort();
  final ExecHandleState endState=execHandle.waitForFinish();
  if (endState == ExecHandleState.FAILED) {
    execHandle.getFailureCause().printStackTrace();
  }
  assertEquals(ExecHandleState.ABORTED,endState);
}
