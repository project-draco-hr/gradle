{
  for (  File sourceDir : sourceDirs) {
    if (javaSourceClass.getAbsolutePath().startsWith(sourceDir.getAbsolutePath())) {
      String relativePath=GFileUtils.relativePath(sourceDir,javaSourceClass);
      if (!relativePath.startsWith("..")) {
        return new JavaSourceClass(relativePath,compileDestination);
      }
    }
  }
  throw new IllegalArgumentException(format("Unable to find source java class: '%s' because it does not belong to any of the source dirs: '%s'",javaSourceClass,sourceDirs));
}
