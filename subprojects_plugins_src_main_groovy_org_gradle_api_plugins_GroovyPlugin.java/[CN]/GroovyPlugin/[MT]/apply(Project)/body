{
  project.getPlugins().apply(GroovyBasePlugin.class);
  project.getPlugins().apply(JavaPlugin.class);
  project.getConfigurations().getByName(COMPILE_CONFIGURATION_NAME).extendsFrom(project.getConfigurations().getByName(GroovyBasePlugin.GROOVY_CONFIGURATION_NAME));
  configureGroovydoc(project);
}
