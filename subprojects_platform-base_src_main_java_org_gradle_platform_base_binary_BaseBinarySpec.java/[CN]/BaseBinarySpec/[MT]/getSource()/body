{
  return ModelMapGroovyDecorator.alwaysMutable(DomainObjectSetBackedModelMap.ofNamed(LanguageSourceSet.class,sourceSets.getSources(),new NamedEntityInstantiator<LanguageSourceSet>(){
    public <S extends LanguageSourceSet>S create(    String name,    Class<S> type){
      return sourceSets.getMainSources().create(name,type);
    }
  }
));
}
