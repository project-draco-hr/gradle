{
  File csFile=temporaryFileProvider.createTemporaryFile("ivytemp",algorithm);
  try {
    FileUtil.copy(new ByteArrayInputStream(ChecksumHelper.computeAsString(src,algorithm).getBytes()),csFile,null);
    repository.put(csFile,destination + "." + algorithm);
  }
  finally {
    csFile.delete();
  }
}
