{
  testFile("build.gradle").writelns("import org.gradle.integtests.TestTask","task asStatement(type: TestTask) { property = 'value' }","task \"dynamic\"(type: TestTask) { property = 'value' }","v = task(expression, type: TestTask) { property = 'value' }","task(postConfigure, type: TestTask).configure { property = 'value' }","[asStatement, dynamic, expression, postConfigure].each { ","assertEquals('value', it.property)","}");
  inTestDirectory().withTasks("configured").run();
}
