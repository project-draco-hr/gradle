{
  testFile("build.gradle").writelns("import org.gradle.integtests.TestTask","task withDescription { description = 'value' }","task(asMethod) { description = 'value' }","task asStatement(type: TestTask) { property = 'value' }","task \"dynamic\"(type: TestTask) { property = 'value' }","v = task(asExpression, type: TestTask) { property = 'value' }","task(postConfigure, type: TestTask).configure { property = 'value' }","[asStatement, dynamic, asExpression, postConfigure].each { ","    assertEquals('value', it.property)","}","[withDescription, asMethod].each {","    assertEquals('value', it.description)","}","task all(dependsOn: tasks.all)");
  inTestDirectory().withTasks("all").run();
}
