{
  testFile("build.gradle").writelns("a = task(withAction) << { }","b = task(nothing)","c = task(emptyOptions())","taskName = 'dynamic'","d = task(\"$taskName\") << { }","e = task('string') << { }","f = task(withOptions, description: 'description')","g = task(withOptionsAndAction, description: 'description') << { }","h = task(anotherWithAction).doFirst {}","task all(dependsOn: [a, b, c, d, e, f, g, h])");
  inTestDirectory().withTasks("all").run().assertTasksExecuted(":anotherWithAction",":dynamic",":emptyOptions",":nothing",":string",":withAction",":withOptions",":withOptionsAndAction",":all");
}
