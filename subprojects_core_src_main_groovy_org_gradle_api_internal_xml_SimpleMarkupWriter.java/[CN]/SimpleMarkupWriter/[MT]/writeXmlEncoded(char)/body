{
  if (ch == '<') {
    writeRaw("&lt;");
  }
 else   if (ch == '>') {
    writeRaw("&gt;");
  }
 else   if (ch == '&') {
    writeRaw("&amp;");
  }
 else   if (ch == '"') {
    writeRaw("&quot;");
  }
 else   if (!XmlUtil.isLegalCharacter(ch)) {
    writeRaw('?');
  }
 else   if (XmlUtil.isRestrictedCharacter(ch)) {
    writeCharacterReference(ch);
  }
 else {
    writeRaw(ch);
  }
}
