{
  final List<File> subFilesList=new ArrayList<File>();
  final File[] subFiles=directory.listFiles();
  if (subFiles != null && subFiles.length > 0) {
    for (    final File subFile : subFiles) {
      if (subFile.isFile()) {
        subFilesList.add(subFile);
      }
    }
  }
  return subFilesList;
}
