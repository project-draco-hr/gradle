{
  try {
    File stateFile=getStateFile(key);
    stateFile.getParentFile().mkdirs();
    ObjectOutputStream outStr=new ObjectOutputStream(new BufferedOutputStream(new FileOutputStream(stateFile)));
    try {
      outStr.writeObject(value);
    }
  finally {
      outStr.close();
    }
  }
 catch (  IOException e) {
    throw new UncheckedIOException(e);
  }
  backingCache.update();
}
