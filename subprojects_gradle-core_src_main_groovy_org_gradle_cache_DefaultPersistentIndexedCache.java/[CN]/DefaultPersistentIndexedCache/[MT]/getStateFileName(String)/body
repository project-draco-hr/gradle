{
  StringBuilder name=new StringBuilder(key);
  boolean encode=false;
  for (int i=0; i < name.length(); i++) {
    char ch=name.charAt(i);
    if (!Character.isLetterOrDigit(ch) && ch != '_') {
      name.setCharAt(i,'_');
      encode=true;
    }
  }
  name.append('_');
  if (!encode) {
    return name.toString();
  }
  name.append(HashUtil.createHash(key));
  return name.toString();
}
