{
  isRefreshing=true;
  enableThingsAppropriately();
  treeComponent.getTree().setBackground(workingBackgroundColor);
  showTextInViewport("Refreshing projects and tasks.");
  try {
    swingGradleWrapper.refreshTaskTree();
  }
 catch (  Exception e) {
    logger.error("Refreshing",e);
    isRefreshing=false;
    enableThingsAppropriately();
  }
}
