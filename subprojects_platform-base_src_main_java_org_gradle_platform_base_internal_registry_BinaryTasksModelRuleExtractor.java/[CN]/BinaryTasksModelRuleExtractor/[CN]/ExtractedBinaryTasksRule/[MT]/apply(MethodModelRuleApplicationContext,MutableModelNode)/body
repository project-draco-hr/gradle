{
  final BinaryTaskRule<S> binaryTaskRule=new BinaryTaskRule<S>(binaryType,ruleDefinition);
  final ModelAction<?> binaryTaskAction=context.contextualize(ruleDefinition,binaryTaskRule);
  context.getRegistry().configure(ModelActionRole.Defaults,DirectNodeNoInputsModelAction.of(ModelReference.of("binaries",BinaryContainer.class),ruleDefinition.getDescriptor(),new Action<MutableModelNode>(){
    @Override public void execute(    MutableModelNode modelNode){
      modelNode.applyTo(allLinks(),ModelActionRole.Finalize,binaryTaskAction);
    }
  }
),target.getPath());
}
