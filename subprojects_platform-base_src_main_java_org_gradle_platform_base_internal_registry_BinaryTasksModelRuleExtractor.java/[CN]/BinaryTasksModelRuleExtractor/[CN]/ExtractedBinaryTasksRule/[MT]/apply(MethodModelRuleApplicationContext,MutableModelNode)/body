{
  final BinaryTaskRule<R,S> binaryTaskRule=new BinaryTaskRule<R,S>(binaryType,ruleDefinition,context.invokerFor(ruleDefinition));
  context.getRegistry().configure(ModelActionRole.Defaults,DirectNodeNoInputsModelAction.of(ModelReference.of("binaries",BinaryContainer.class),ruleDefinition.getDescriptor(),new Action<MutableModelNode>(){
    @Override public void execute(    MutableModelNode modelNode){
      modelNode.applyTo(allLinks(),ModelActionRole.Finalize,binaryTaskRule);
    }
  }
),target.getPath());
}
