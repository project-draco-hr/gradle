{
  StringBuffer s=new StringBuffer(String.format("A model node of type: '%s' can not be constructed.\n" + "Its type must be one the following:\n" + "  - A supported scalar type (%s)\n"+ "  - An enumerated type (Enum)\n"+ "  - An explicitly managed type (i.e. annotated with @Managed)\n"+ "  - An explicitly unmanaged type (i.e. annotated with @Unmanaged)\n"+ "  - A scalar collection type (%s)\n"+ "  - A managed collection type (%s)\n",type,describe(scalarTypes),describe(scalarCollectionTypes),describe(managedCollectionTypes)));
  if (!Iterables.isEmpty(managedTypes)) {
    s.append("  - A managed type:\n");
    for (    ModelType<?> modelType : managedTypes) {
      s.append(String.format("    - %s",modelType.getName()));
    }
  }
  return s.toString();
}
