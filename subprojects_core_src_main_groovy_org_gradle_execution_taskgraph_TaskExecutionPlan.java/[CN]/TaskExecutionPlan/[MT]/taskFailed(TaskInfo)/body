{
  lock.lock();
  try {
    System.out.println("Task failed: " + taskInfo.getTask().getPath());
    taskInfo.executionFailed();
    try {
      failureHandler.onTaskFailure(taskInfo.getTask());
    }
 catch (    Exception e) {
      abortExecution(e);
    }
    condition.signalAll();
  }
  finally {
    lock.unlock();
  }
}
