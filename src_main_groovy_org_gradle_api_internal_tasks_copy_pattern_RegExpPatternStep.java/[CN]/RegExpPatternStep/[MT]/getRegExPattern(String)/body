{
  StringBuilder result=new StringBuilder();
  for (int i=0; i < pattern.length(); i++) {
    char next=pattern.charAt(i);
    if (escapeChars.indexOf(next) >= 0) {
      result.append('\\');
    }
 else     if (patternChars.indexOf(next) >= 0) {
      result.append('.');
    }
    result.append(next);
  }
  return result.toString();
}
