{
  ScriptExecutionListener scriptExecutionListener=get(ListenerManager.class).getBroadcaster(ScriptExecutionListener.class);
  return new DefaultScriptCompilerFactory(new FileCacheBackedScriptClassCompiler(get(CacheRepository.class),new CachingScriptCompilationHandler(new DefaultScriptCompilationHandler())),new DefaultScriptRunnerFactory(scriptExecutionListener));
}
