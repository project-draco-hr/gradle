{
  running=true;
  try {
    while (running) {
      try {
        if (!copyData()) {
          Thread.sleep(100);
        }
      }
 catch (      IOException e) {
        logger.error("Error copying data",e);
      }
    }
    if (finish) {
      try {
        while (copyData())         ;
      }
 catch (      IOException e) {
        logger.error("Error copying data",e);
      }
    }
  }
 catch (  InterruptedException e) {
  }
}
