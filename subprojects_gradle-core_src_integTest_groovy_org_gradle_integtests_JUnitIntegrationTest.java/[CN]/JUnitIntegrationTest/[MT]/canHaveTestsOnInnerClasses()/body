{
  TestFile testDir=dist.getTestDir();
  testDir.file("build.gradle").writelns("apply id: 'java'","repositories { mavenCentral() }","dependencies { compile 'junit:junit:4.7' }");
  testDir.file("src/test/java/org/gradle/SomeTest.java").writelns("package org.gradle;","public class SomeTest {","    public static class SomeInner {","        @org.junit.Test public void ok() { }","    }","}");
  executer.withTasks("test").run();
  testDir.file("build/test-results/TEST-org.gradle.SomeTest$SomeInner.xml").assertIsFile();
}
