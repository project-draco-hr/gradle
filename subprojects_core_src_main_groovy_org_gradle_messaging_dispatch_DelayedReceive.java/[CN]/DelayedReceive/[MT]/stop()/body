{
  lock.lock();
  try {
    stopping=true;
    condition.signalAll();
    while (!queue.isEmpty()) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw UncheckedException.asUncheckedException(e);
      }
    }
  }
  finally {
    lock.unlock();
  }
}
