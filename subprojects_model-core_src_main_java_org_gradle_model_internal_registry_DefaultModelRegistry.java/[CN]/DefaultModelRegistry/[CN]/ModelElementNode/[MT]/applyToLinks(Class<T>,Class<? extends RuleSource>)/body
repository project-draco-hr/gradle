{
  final ModelType<T> modelType=ModelType.of(type);
  registerListener(new ModelCreationListener(){
    @Nullable @Override public ModelPath matchParent(){
      return getPath();
    }
    @Nullable @Override public ModelType<?> matchType(){
      return modelType;
    }
    @Override public boolean onCreate(    ModelNodeInternal node){
      node.applyToSelf(rules);
      return false;
    }
  }
);
}
