{
  CommandLineTool<T> tool=new CommandLineTool<T>(key.getToolName(),exe,execActionFactory);
  tool.withPath(install.getVisualCppBin(targetPlatform),sdk.getBinDir(),install.getCommonIdeBin());
  tool.withEnvironment(Collections.singletonMap("LIB",install.getVisualCppLib(targetPlatform).getAbsolutePath() + File.pathSeparator + sdk.getLibDir(targetPlatform).getAbsolutePath()));
  return tool;
}
