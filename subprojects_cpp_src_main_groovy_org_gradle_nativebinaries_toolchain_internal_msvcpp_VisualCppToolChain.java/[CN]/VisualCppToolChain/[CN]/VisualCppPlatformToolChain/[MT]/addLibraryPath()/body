{
  return new Transformer<LinkerSpec,LinkerSpec>(){
    public LinkerSpec transform(    LinkerSpec original){
      original.libraryPath(install.getVisualCppLib(targetPlatform));
      if (sdk != null) {
        original.libraryPath(sdk.getLibDir(targetPlatform));
      }
      return original;
    }
  }
;
}
