{
  GradleDistribution dist=RuleHelper.findField(target,GradleDistribution.class);
  if (dist != null) {
    return dist.getTemporaryFolder();
  }
  TemporaryFolder folder=RuleHelper.findField(target,TemporaryFolder.class);
  if (folder != null) {
    return folder;
  }
  throw new RuntimeException(String.format("Could not find a GradleDistribution or TemporaryFolder field for test class %s.",target.getClass().getSimpleName()));
}
