{
  for (  TestMethodResult methodResult : methodResults) {
    writer.newLine();
    writer.writeCharacters("    ");
    String testCase=methodResult.result.getResultType() == TestResult.ResultType.SKIPPED ? "ignored-testcase" : "testcase";
    writer.writeStartElement(testCase).attribute("name",methodResult.name).attribute("classname",className).attribute("time",String.valueOf(methodResult.getDuration() / 1000.0));
    for (    Throwable failure : methodResult.result.getExceptions()) {
      writer.newLine();
      writer.writeCharacters("      ");
      writer.writeStartElement("failure").attribute("message",failureMessage(failure)).attribute("type",failure.getClass().getName());
      writer.writeCharacters(stackTrace(failure));
      writer.writeEndElement();
    }
    writer.writeEndElement();
  }
}
