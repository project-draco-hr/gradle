{
  try {
    SimpleXmlWriter writer=new SimpleXmlWriter(output);
    writer.newLine();
    writer.writeCharacters("  ");
    writer.writeStartElement("testsuite").attribute("name",className).attribute("tests",String.valueOf(result.getTestsCount())).attribute("failures",String.valueOf(result.getFailuresCount())).attribute("errors","0").attribute("timestamp",DateUtils.format(result.getStartTime(),DateUtils.ISO8601_DATETIME_PATTERN)).attribute("hostname",hostName).attribute("time",String.valueOf(result.getDuration() / 1000.0));
    writer.newLine();
    writer.writeCharacters("  ");
    writer.writeStartElement("properties");
    writer.writeEndElement();
    writeTests(writer,result.getResults(),className);
    writer.newLine();
    writer.writeCharacters("  ");
    writer.writeStartElement("system-out");
    writeOutputs(writer,className,TestOutputEvent.Destination.StdOut);
    writer.writeEndElement();
    writer.newLine();
    writer.writeCharacters("  ");
    writer.writeStartElement("system-err");
    writeOutputs(writer,className,TestOutputEvent.Destination.StdErr);
    writer.writeEndElement();
    writer.newLine();
    writer.writeEndElement();
  }
 catch (  IOException e) {
    throw new UncheckedIOException("Problems writing the XML results for class: " + className,e);
  }
}
