{
  IvyPublicationIdentity identity=publication.getProjectIdentity();
  Node infoNode=getIvyFileInfoNode(publication.getDescriptorFile());
  field(publication,"organisation",identity.getOrganisation()).notEmpty().validInFileName().matches((String)infoNode.attribute("organisation"));
  field(publication,"module name",identity.getModule()).notEmpty().validInFileName().matches((String)infoNode.attribute("module"));
  field(publication,"revision",identity.getRevision()).notEmpty().validInFileName().matches((String)infoNode.attribute("revision"));
}
