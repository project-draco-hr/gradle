{
  DefaultGroovyPomFilterContainer pomFilterContainer=new DefaultGroovyPomFilterContainer(new DefaultMavenPomFactory(dependencyManager.getDefaultMavenScopeMapping()));
  return new BaseMavenInstaller(name,pomFilterContainer,new DefaultArtifactPomContainer(pomDir,pomFilterContainer,new DefaultPomFileWriter(new DefaultPomWriter(new DefaultPomHeaderWriter(),new DefaultPomModuleIdWriter(),new DefaultPomDependenciesWriter(new DefaultPomDependenciesConverter(new DefaultExcludeRuleConverter())))),new DefaultArtifactPomFactory()),dependencyManager);
}
