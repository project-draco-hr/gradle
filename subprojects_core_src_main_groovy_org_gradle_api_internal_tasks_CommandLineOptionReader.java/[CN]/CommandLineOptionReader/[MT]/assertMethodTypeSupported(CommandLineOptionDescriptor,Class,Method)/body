{
  if (method.getParameterTypes().length != 1) {
    throw new CommandLineArgumentException(String.format("Option '%s' cannot be linked to methods with multiple parameters in class '%s#%s'.",optionDescriptor.getName(),taskClazz.getName(),method.getName()));
  }
  final Class<?> parameterType=method.getParameterTypes()[0];
  if (!(parameterType == Boolean.class || parameterType == Boolean.TYPE) && !parameterType.isAssignableFrom(String.class) && !parameterType.isEnum()) {
    throw new CommandLineArgumentException(String.format("Option '%s' cannot be casted to parameter type '%s' in class '%s'.",optionDescriptor.getName(),parameterType.getName(),taskClazz.getName()));
  }
}
