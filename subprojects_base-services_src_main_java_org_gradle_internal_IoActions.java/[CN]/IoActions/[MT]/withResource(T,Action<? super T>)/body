{
  try {
    action.execute(resource);
  }
 catch (  Throwable t) {
    try {
      resource.close();
    }
 catch (    IOException e) {
    }
    throw UncheckedException.throwAsUncheckedException(t);
  }
  try {
    resource.close();
  }
 catch (  IOException e) {
    throw new UncheckedIOException(e);
  }
}
