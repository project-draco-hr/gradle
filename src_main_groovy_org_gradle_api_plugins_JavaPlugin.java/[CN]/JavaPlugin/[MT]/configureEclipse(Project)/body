{
  project.createTask(ECLIPSE).dependsOn(configureEclipseProject(project),configureEclipseClasspath(project)).setDescription("Generates an Eclipse .project and .classpath file.");
  project.createTask(WrapUtil.toMap("type",EclipseClean.class),ECLIPSE_CLEAN).setDescription("Deletes the Eclipse .project and .classpath files.");
}
