{
  project.createTask(ECLIPSE_TASK_NAME).dependsOn(configureEclipseProject(project),configureEclipseClasspath(project)).setDescription("Generates an Eclipse .project and .classpath file.");
  project.createTask(WrapUtil.toMap("type",EclipseClean.class),ECLIPSE_CLEAN_TASK_NAME).setDescription("Deletes the Eclipse .project and .classpath files.");
}
