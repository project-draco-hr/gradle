{
  try {
    taskFactory.createTask(testProject,GUtil.map(Task.TASK_NAME,"task",Task.TASK_TYPE,MissingConstructorTask.class));
    fail();
  }
 catch (  GradleException e) {
    assertEquals("Cannot create task of type 'MissingConstructorTask' as it does not have an appropriate public constructor.",e.getMessage());
