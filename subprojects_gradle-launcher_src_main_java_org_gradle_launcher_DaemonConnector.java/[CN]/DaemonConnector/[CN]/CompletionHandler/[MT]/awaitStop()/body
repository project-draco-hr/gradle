{
  lock.lock();
  try {
    while (!stopped && System.currentTimeMillis() < expiry) {
      try {
        condition.awaitUntil(new Date(expiry));
      }
 catch (      InterruptedException e) {
        throw UncheckedException.asUncheckedException(e);
      }
    }
    return stopped;
  }
  finally {
    lock.unlock();
  }
}
