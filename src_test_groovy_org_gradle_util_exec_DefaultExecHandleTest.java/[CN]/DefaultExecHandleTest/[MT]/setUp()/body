{
  sourceDir.mkdirs();
  final File gradlePackage=new File(sourceDir,"org/gradle");
  gradlePackage.mkdirs();
  final File testSourceFile=new File(gradlePackage,"Test.java");
  final String newLine=System.getProperty("line.separator");
  FileUtils.writeStringToFile(testSourceFile,"package org.gradle; " + newLine + "/**"+ newLine+ " *@author Test Author"+ newLine+ " */"+ newLine+ "public class Test { }");
}
