{
  final Class<?> type=field.getType();
  if (!(type == Boolean.class || type == Boolean.TYPE) && !type.isAssignableFrom(String.class) && !type.isEnum()) {
    throw new OptionValidationException(String.format("Option '%s' cannot be casted to type '%s' in class '%s'.",name,type.getName(),field.getDeclaringClass().getName()));
  }
}
