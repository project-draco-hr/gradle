{
  return new Statement(){
    @Override public void evaluate() throws Throwable {
      dist=RuleHelper.getField(target,GradleDistribution.class);
      try {
        base.evaluate();
      }
  finally {
        SwingUtilities.invokeAndWait(new Runnable(){
          public void run(){
            for (            JFrame frame : frames) {
              frame.dispose();
            }
          }
        }
);
      }
    }
  }
;
}
