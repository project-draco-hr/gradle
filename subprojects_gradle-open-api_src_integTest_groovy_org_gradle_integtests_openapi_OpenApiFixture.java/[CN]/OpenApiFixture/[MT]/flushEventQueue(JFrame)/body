{
  try {
    SwingUtilities.invokeAndWait(new Runnable(){
      public void run(){
        frame.setVisible(true);
      }
    }
);
    Thread.sleep(500);
    SwingUtilities.invokeAndWait(new Runnable(){
      public void run(){
        frame.setVisible(false);
      }
    }
);
  }
 catch (  Exception e) {
    throw UncheckedException.asUncheckedException(e);
  }
}
