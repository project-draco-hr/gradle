{
  A annotation=type.getAnnotation(annotationType);
  if (annotation != null) {
    return annotation;
  }
  if (annotationType.getAnnotation(Inherited.class) != null) {
    for (    Class<?> anInterface : type.getInterfaces()) {
      annotation=getAnnotation(anInterface,annotationType);
      if (annotation != null) {
        return annotation;
      }
    }
  }
  return null;
}
