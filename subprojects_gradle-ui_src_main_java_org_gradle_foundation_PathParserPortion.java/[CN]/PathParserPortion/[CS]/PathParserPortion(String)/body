{
  if (path != null && !path.isEmpty()) {
    if (path.startsWith(":")) {
      path=path.substring(1);
    }
    int indexOfColon=path.indexOf(':');
    if (indexOfColon == -1) {
      firstPart=path;
    }
 else {
      firstPart=path.substring(0,indexOfColon);
      remainder=path.substring(indexOfColon + 1);
    }
  }
}
