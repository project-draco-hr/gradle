{
  setUpMocks(test);
  context.checking(new Expectations(){
{
      one(testFrameworkInstanceMock).report(getProject(),test);
    }
  }
);
  getProject().getAnt().setProperty(AntTest.FAILURES_OR_ERRORS_PROPERTY,"true");
