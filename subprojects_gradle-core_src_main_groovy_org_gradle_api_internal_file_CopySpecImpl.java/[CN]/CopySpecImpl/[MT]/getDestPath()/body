{
  if (parentSpec == null) {
    return "/";
  }
  String parentPath=parentSpec.getDestPath();
  if (destDir == null) {
    return parentPath;
  }
  String path=destDir.toString();
  if (path.startsWith("/") || path.startsWith(File.separator)) {
    return path;
  }
  if (parentPath.equals("/")) {
    return "/" + path;
  }
  return parentPath + '/' + path;
}
