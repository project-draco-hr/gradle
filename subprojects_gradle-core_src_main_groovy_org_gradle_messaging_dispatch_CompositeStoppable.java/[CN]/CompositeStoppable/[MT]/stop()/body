{
  Throwable failure=null;
  try {
    for (    Stoppable element : elements) {
      try {
        element.stop();
      }
 catch (      Throwable throwable) {
        if (failure == null) {
          failure=throwable;
        }
 else {
          LOGGER.error(String.format("Could not stop %s.",element),throwable);
        }
      }
    }
  }
  finally {
    elements.clear();
  }
  if (failure != null) {
    throw UncheckedException.asUncheckedException(failure);
  }
}
