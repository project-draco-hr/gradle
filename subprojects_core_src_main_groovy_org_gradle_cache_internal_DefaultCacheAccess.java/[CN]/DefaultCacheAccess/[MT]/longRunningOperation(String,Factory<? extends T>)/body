{
  lock.lock();
  try {
    if (depth == 0) {
      throw new IllegalStateException("Cannot start long running operation, as the artifact cache has not been locked.");
    }
    boolean wasEnded=onEndWork();
    try {
      return action.create();
    }
  finally {
      if (wasEnded) {
        onStartWork();
      }
    }
  }
  finally {
    lock.unlock();
  }
}
