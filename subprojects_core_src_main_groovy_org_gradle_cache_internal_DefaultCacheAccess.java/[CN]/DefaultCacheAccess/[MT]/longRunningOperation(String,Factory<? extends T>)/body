{
  if (maybeReentrantLongRunningOperation(operationDisplayName)) {
    try {
      return action.create();
    }
  finally {
      longOperationCompleted(operationDisplayName);
    }
  }
  checkThreadIsOwner();
  boolean wasEnded=onEndWork();
  parkOwner(operationDisplayName);
  try {
    return action.create();
  }
  finally {
    restoreOwner(operationDisplayName);
    if (wasEnded) {
      onStartWork();
    }
  }
}
