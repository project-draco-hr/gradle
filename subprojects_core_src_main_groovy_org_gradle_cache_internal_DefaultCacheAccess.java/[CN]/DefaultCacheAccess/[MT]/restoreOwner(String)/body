{
  lock.lock();
  try {
    while (owner != null) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw UncheckedException.throwAsUncheckedException(e);
      }
    }
    owner=Thread.currentThread();
    longOperationCompleted(description);
  }
  finally {
    lock.unlock();
  }
}
