{
  File file=new File(path.toString());
  if (!file.isAbsolute()) {
    return file;
  }
  File loopFile=file;
  String relativePath="";
  while (loopFile != null) {
    if (loopFile.equals(getProjectDir())) {
      break;
    }
    relativePath=loopFile.getName() + "/" + relativePath;
    loopFile=loopFile.getParentFile();
  }
  return loopFile == null ? null : new File(relativePath);
}
