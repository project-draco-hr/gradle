{
  if (execution.isSingleUseDaemon()) {
    execution.proceed();
    return;
  }
  LOG.lifecycle(daemonStats.buildStarted());
  try {
    execution.proceed();
  }
  finally {
    daemonStats.buildFinished();
  }
  if (daemonStats.getCurrentPerformance() < daemonTiredThreshold) {
    execution.getDaemonStateControl().requestStop();
  }
}
