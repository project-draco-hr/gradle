{
  allStoppedLock.lock();
  try {
    for (    final PipelineListener listener : pipeline.getListeners()) {
      listener.pipelineStopped(pipeline);
    }
    notStopped.remove(pipeline);
    if (notStopped.isEmpty()) {
      allStoppedCondition.signal();
    }
  }
  finally {
    allStoppedLock.unlock();
  }
}
