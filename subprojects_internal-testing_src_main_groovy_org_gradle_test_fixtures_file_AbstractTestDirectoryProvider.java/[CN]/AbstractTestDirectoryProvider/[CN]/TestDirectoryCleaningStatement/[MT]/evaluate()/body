{
  base.evaluate();
  try {
    if (cleanup && dir != null && dir.exists()) {
      try {
        FileUtils.forceDelete(dir);
      }
 catch (      IOException e) {
        Thread.sleep(1500);
        FileUtils.forceDelete(dir);
      }
    }
  }
 catch (  Exception e) {
    if (suppressCleanupErrors) {
      System.err.println("Couldn't delete test dir for " + displayName + " (test is holding files open)");
      e.printStackTrace(System.err);
    }
 else {
      throw e;
    }
  }
}
