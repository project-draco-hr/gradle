{
  try {
    target.getParentFile().mkdirs();
    if (isDirectory()) {
      target.mkdirs();
    }
 else {
      copyFile(target);
    }
    target.setLastModified(getLastModified());
    FileSystems.getDefault().chmod(target,getMode());
    return true;
  }
 catch (  Exception e) {
    throw new GradleException(String.format("Could not copy %s to '%s'.",getDisplayName(),target),e);
  }
}
