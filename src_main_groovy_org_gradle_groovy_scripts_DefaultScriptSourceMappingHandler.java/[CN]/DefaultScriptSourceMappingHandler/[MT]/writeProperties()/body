{
  File dir=mappingFile.getParentFile();
  if (!dir.exists())   dir.mkdirs();
  if (mappingFile.canWrite() || (!mappingFile.exists() && dir.canWrite())) {
    try {
      Writer writer=new BufferedWriter(new FileWriter(mappingFile));
      try {
        properties.store(writer,"Autogenerated.  Do not edit.");
      }
  finally {
        writer.close();
      }
    }
 catch (    IOException e) {
      logger.error("Exception writing script mapping file",e);
    }
  }
}
