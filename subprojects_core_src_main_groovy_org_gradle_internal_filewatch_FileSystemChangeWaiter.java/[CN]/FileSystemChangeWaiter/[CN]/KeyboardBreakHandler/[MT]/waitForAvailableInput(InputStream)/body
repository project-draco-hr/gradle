{
  int available=0;
  while (!Thread.currentThread().isInterrupted() && (available=inputStream.available()) == 0) {
    try {
      Thread.sleep(WAIT_INPUT_MILLIS);
    }
 catch (    InterruptedException e) {
      Thread.currentThread().interrupt();
      break;
    }
  }
  return available > 0;
}
