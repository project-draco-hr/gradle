{
  super(project,name);
  FileResolver fileResolver=((ProjectInternal)project).getFileResolver();
  copyAction=new CopyActionImpl(fileResolver);
  doLast(new TaskAction(){
    public void execute(    Task task){
      configureRootSpec();
      copyAction.execute();
      setDidWork(copyAction.getDidWork());
    }
  }
);
}
