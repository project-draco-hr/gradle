{
  OptionalAttributeXmlWriter xmlWriter=new OptionalAttributeXmlWriter(writer,"  ",IVY_FILE_ENCODING);
  xmlWriter.startElement("ivy-module").attribute("version","2.0");
  xmlWriter.startElement("info").attribute("organisation",module.getGroup()).attribute("module",module.getName()).attribute("revision",module.getVersion()).attribute("status",module.getStatus()).attribute("publication",ivyDateFormat.format(new Date())).endElement();
  writeConfigurations(xmlWriter);
  writePublications(xmlWriter);
  writeDependencies(xmlWriter);
  xmlWriter.endElement();
}
