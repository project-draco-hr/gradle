{
  ServiceRegistry loggingServices=createLoggingServices();
  LoggingConfiguration loggingConfiguration=new LoggingConfiguration();
  Action<ExecutionListener> action=new WithLogging(loggingServices,args,loggingConfiguration,new ParseAndBuildAction(loggingServices,args));
  return new ExceptionReportingAction(action,new BuildExceptionReporter(loggingServices.get(StyledTextOutputFactory.class),loggingConfiguration,clientMetaData()));
}
