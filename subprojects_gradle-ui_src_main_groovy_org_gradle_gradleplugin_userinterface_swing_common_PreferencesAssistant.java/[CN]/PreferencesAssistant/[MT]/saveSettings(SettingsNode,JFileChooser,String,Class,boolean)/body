{
  SettingsNode childNode=settingsNode.addChildIfNotPresent(getPrefix(fileChooserClass,id));
  String save=null;
  try {
    if (saveCurrentDirectoryVsSelectedFilesParent)     save=fileChooser.getCurrentDirectory().getCanonicalPath();
 else     save=fileChooser.getSelectedFile().getCanonicalPath();
  }
 catch (  IOException e) {
  }
  if (save != null) {
    childNode.setValueOfChild(DIRECTORY_NAME,save);
  }
}
