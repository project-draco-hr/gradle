{
  SshClient sshClient=null;
  ClientSession session=null;
  try {
    sshClient=createSshClient();
    session=connect(sshClient,uri);
    authenticate(session,uri);
    return new NonExistingFileHandlingSftpClient(sshClient,session);
  }
 catch (  IOException e) {
    if (session != null) {
      session.close(true);
    }
    if (sshClient != null) {
      sshClient.stop();
    }
    throw e;
  }
}
