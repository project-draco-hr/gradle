{
  for (  TestMethodResult methodResult : methodResults) {
    String testCase=methodResult.result.getResultType() == TestResult.ResultType.SKIPPED ? "ignored-testcase" : "testcase";
    writer.startElement(testCase).attribute("name",methodResult.name).attribute("classname",className).attribute("time",String.valueOf(methodResult.getDuration() / 1000.0));
    for (    Throwable failure : methodResult.result.getExceptions()) {
      writer.startElement("failure").attribute("message",failureMessage(failure)).attribute("type",failure.getClass().getName());
      writer.characters(stackTrace(failure));
      writer.endElement();
    }
    writer.endElement();
  }
}
