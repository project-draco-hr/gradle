{
  try {
    if (throwable instanceof PlaceholderException) {
      return String.format("Could not determine failure message for exception of type %s: %s",((PlaceholderException)throwable).getExceptionClassName(),throwable.getCause());
    }
    return throwable.toString();
  }
 catch (  Throwable t) {
    return String.format("Could not determine failure message for exception of type %s: %s",throwable.getClass().getName(),t);
  }
}
