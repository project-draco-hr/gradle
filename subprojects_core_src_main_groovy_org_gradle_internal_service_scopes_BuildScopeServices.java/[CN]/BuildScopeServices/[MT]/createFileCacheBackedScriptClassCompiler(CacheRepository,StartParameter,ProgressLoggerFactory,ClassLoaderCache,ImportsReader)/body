{
  CacheValidator scriptCacheInvalidator=new CacheValidator(){
    public boolean isValid(){
      return !startParameter.isRecompileScripts();
    }
  }
;
  return new FileCacheBackedScriptClassCompiler(cacheRepository,scriptCacheInvalidator,new DefaultScriptCompilationHandler(classLoaderCache,importsReader),progressLoggerFactory);
}
