{
  File outputFile=new CompilerOutputFileNamingScheme().withObjectFileNameSuffix(".res").withOutputBaseFolder(spec.getObjectFileDir()).map(inputFile);
  File outputDirectory=outputFile.getParentFile();
  if (!outputDirectory.exists()) {
    outputDirectory.mkdirs();
  }
  return windowsPathLengthLimitation ? FileUtils.assertInWindowsPathLengthLimitation(outputFile) : outputFile;
}
