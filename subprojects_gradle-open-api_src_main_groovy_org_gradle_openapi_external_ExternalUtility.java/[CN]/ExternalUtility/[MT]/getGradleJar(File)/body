{
  File libDirectory=new File(gradleHomeDirectory,"lib");
  if (!libDirectory.exists())   return null;
  File[] files=libDirectory.listFiles(new FileFilter(){
    public boolean accept(    File file){
      String name=file.getName();
      if (name.startsWith("gradle-core-") && name.endsWith(".jar"))       return true;
      return false;
    }
  }
);
  if (files == null || files.length == 0)   return null;
  if (files.length > 1)   throw new RuntimeException("Installation has multiple gradle jars. Cannot determine which one to use. Found files: " + files);
  return files[0];
}
