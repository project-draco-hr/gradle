{
  String publicationName=publication.getName();
  String repositoryName=repository.getName();
  String publishTaskName=calculatePublishTaskName(publicationName,repositoryName);
  if (tasks.findByName(publishTaskName) == null) {
    createPublishTask(publishTaskName,publication,repository,String.format("Publishes Maven publication '%s' to Maven repository '%s'",publicationName,repositoryName));
  }
}
