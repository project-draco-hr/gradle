{
  compiler.args("/nologo");
  compiler.args("/Fe" + spec.getOutputFile().getAbsolutePath());
  if (spec instanceof LibraryCompileSpec) {
    compiler.args("/LD");
  }
  compiler.args("/link");
  for (  File file : spec.getLibs()) {
    compiler.args(file.getAbsolutePath().replaceFirst("\\.dll$",".lib"));
  }
}
