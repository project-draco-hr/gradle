{
  this.project=project;
  JavaBasePlugin javaBasePlugin=project.getPlugins().apply(JavaBasePlugin.class);
  project.getConfigurations().add(GROOVY_CONFIGURATION_NAME).setVisible(false).setDescription("The Groovy libraries to be used for this Groovy project.");
  configureCompileDefaults();
  configureSourceSetDefaults(javaBasePlugin);
  configureGroovydoc();
}
