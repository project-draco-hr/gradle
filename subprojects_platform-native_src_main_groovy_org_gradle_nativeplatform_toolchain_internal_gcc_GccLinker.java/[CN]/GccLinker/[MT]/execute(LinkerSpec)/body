{
  List<String> args=argsTransformer.transform(spec);
  invocationContext.getArgAction().execute(args);
  if (useCommandFile) {
    new GccOptionsFileArgsWriter(spec.getTempDir()).execute(args);
  }
  CommandLineToolInvocation invocation=invocationContext.createInvocation(String.format("linking %s",spec.getOutputFile().getName()),args);
  commandLineToolInvocationWorker.execute(invocation);
  return new SimpleWorkResult(true);
}
