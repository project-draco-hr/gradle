{
  File maybeJdk=new File(javaHome,"../bin");
  String executable=findInDir(maybeJdk,command);
  if (executable != null) {
    return executable;
  }
  File maybeJre=new File(javaHome,"/bin");
  executable=findInDir(maybeJre,command);
  if (executable != null) {
    return executable;
  }
  throw new JavaExecutableNotFoundException("Unable to find java executable: " + command + " under supplied java home: "+ javaHome+ "\n Tried standard jdk: "+ maybeJdk+ "\n Tried Standard jre: "+ maybeJre);
}
