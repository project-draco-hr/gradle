{
  StringBuilder builder=new StringBuilder();
  if (uri.getScheme() != null) {
    builder.append(uri.getScheme());
    builder.append(":");
  }
  if (uri.getHost() != null) {
    builder.append("//");
    builder.append(uri.getHost());
  }
  if (uri.getPort() > 0) {
    builder.append(":");
    builder.append(uri.getPort());
  }
  if (uri.getPath() != null) {
    builder.append(uri.getPath());
  }
  return builder.toString();
}
