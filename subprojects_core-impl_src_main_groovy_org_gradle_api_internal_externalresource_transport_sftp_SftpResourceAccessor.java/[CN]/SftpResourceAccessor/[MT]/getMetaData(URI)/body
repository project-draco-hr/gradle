{
  SftpClient sftpClient=null;
  try {
    sftpClient=sftpClientFactory.createSftpClient(uri,credentials);
    Attributes attributes=sftpClient.lstat(uri.getPath());
    return attributes != null ? toMetaData(uri.toString(),attributes) : null;
  }
  finally {
    if (sftpClient != null) {
      sftpClient.close();
    }
  }
}
