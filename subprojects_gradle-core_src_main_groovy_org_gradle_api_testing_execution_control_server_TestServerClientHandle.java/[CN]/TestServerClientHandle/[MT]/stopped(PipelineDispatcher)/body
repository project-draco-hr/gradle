{
  statusLock.lock();
  try {
    if (status != ForkStatus.STOPPING && status != ForkStatus.RESTARTING)     throw new IllegalStateException("can't change status to STOPPED, current status is " + status);
    final ForkStatus previousStatus=status;
    status=ForkStatus.STOPPED;
    pipelineDispatcher.removeRunningHandle(this);
    signalAllClientsStoppedWhenNeeded(previousStatus,pipelineDispatcher);
  }
  finally {
    statusLock.unlock();
  }
}
