{
  context.checking(new Expectations(){
{
      one(testFrameworkMock).getInstance(test);
      will(returnValue(testFrameworkInstanceMock));
      one(testFrameworkInstanceMock).initialize();
    }
  }
);
  test.useTestFramework(testFrameworkMock);
