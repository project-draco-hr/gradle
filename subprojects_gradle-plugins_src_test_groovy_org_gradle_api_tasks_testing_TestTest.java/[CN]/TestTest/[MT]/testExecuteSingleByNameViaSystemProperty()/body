{
  String singleProperty=test.getName() + ".single";
  System.setProperty(singleProperty,"CustomTest");
  try {
    configureTask();
    expectTestsExecuted();
    test.executeTests();
    assertThat(test.getIncludes(),equalTo(WrapUtil.toSet("**/CustomTest*.class")));
  }
  finally {
    System.clearProperty(singleProperty);
  }
}
