{
  boolean osx=operatingSystem.isMacOsX();
switch (targetPlatform.getArchitecture()) {
case I386:
    if (osx) {
      tool.withArguments("-arch","i386");
    }
 else {
      tool.withArguments("--32");
    }
  break;
case AMD64:
if (osx) {
  tool.withArguments("-arch","x86_64");
}
 else {
  tool.withArguments("--64");
}
}
}
