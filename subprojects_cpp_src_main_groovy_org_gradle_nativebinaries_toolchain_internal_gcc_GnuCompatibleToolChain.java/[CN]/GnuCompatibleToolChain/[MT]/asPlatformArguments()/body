{
  boolean osx=operatingSystem.isMacOsX();
switch (targetPlatform.getArchitecture()) {
case I386:
    if (osx) {
      return args("-arch","i386");
    }
 else {
      return args("--32");
    }
case AMD64:
  if (osx) {
    return args("-arch","x86_64");
  }
 else {
    return args("--64");
  }
default :
return args();
}
}
