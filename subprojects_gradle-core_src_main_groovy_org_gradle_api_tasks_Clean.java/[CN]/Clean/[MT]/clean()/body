{
  if (getDir() == null) {
    throw new InvalidUserDataException("The dir property must be specified!");
  }
  if (!getDir().exists()) {
    return;
  }
  logger.debug("Deleting dir: {}",getDir());
  try {
    FileUtils.deleteDirectory(getDir());
  }
 catch (  IOException e) {
    throw new InvalidUserDataException("Can't delete directory: " + getDir(),e);
  }
}
