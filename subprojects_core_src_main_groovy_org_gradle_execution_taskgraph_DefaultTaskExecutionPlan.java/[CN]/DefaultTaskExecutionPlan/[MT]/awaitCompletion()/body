{
  lock.lock();
  try {
    while (!allTasksComplete()) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw new RuntimeException(e);
      }
    }
    if (failure != null) {
      UncheckedException.throwAsUncheckedException(failure);
    }
  }
  finally {
    lock.unlock();
  }
}
