{
  if (targets.isEmpty()) {
    List<T> typed=Lists.newArrayList(withType(type));
    if (typed.size() == 1) {
      return typed;
    }
 else     if (typed.size() > 1) {
      return typed.subList(0,1);
    }
    throw new InvalidUserDataException(String.format("No platforms is registered for type: '%s'",type));
  }
  List<T> selected=new ArrayList<T>();
  for (  String target : targets) {
    boolean targetFound=false;
    for (    T platform : withType(type)) {
      if (target.equals(platform.getName())) {
        selected.add(platform);
        targetFound=true;
      }
    }
    if (!targetFound) {
      throw new InvalidUserDataException(String.format("Invalid Platform: '%s'",target));
    }
  }
  return selected;
}
