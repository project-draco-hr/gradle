{
  Method match;
  try {
    match=delegate.getClass().getMethod(method.getName(),method.getParameterTypes());
  }
 catch (  NoSuchMethodException e) {
    throw new UnsupportedOperationException(String.format("Method not found. Please verify that the version of Gradle you connect to contains method: %s.%s()",method.getDeclaringClass().getSimpleName(),method.getName(),delegate.getClass().getSimpleName()),e);
  }
  LinkedList<Class<?>> queue=new LinkedList<Class<?>>();
  queue.add(delegate.getClass());
  while (!queue.isEmpty()) {
    Class<?> c=queue.removeFirst();
    try {
      match=c.getMethod(method.getName(),method.getParameterTypes());
    }
 catch (    NoSuchMethodException e) {
    }
    for (    Class<?> interfaceType : c.getInterfaces()) {
      queue.addFirst(interfaceType);
    }
    if (c.getSuperclass() != null) {
      queue.addFirst(c.getSuperclass());
    }
  }
  match.setAccessible(true);
  return match;
}
