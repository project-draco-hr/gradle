{
  Factory<MavenPom> pomFactory=mavenFactory.createMavenPomFactory(project.getConfigurations(),mavenFactory.createConf2ScopeMappingContainer(conf2ScopeMappings.getMappings()),mavenFactory.createPomDependenciesConverter(mavenFactory.createExcludeRuleConverter()),project.getFileResolver());
  MavenPom pom=pomFactory.create();
  pom.setGroupId(project.getGroup().toString());
  pom.setArtifactId(project.getName());
  pom.setVersion(project.getVersion().toString());
  return ConfigureUtil.configure(configureClosure,pom);
}
