{
  this.testDirectory=testDirectory;
  this.leaksHandles=testClass.getAnnotation(LeaksFileHandles.class) != null || description.getAnnotation(LeaksFileHandles.class) != null || "daemon".equals(System.getProperty("org.gradle.integtest.executer"));
  this.displayName=description.getDisplayName();
  boolean cleansUpWithInterceptor=testClass.getAnnotation(CleanupTestDirectory.class) != null || description.getAnnotation(CleanupTestDirectory.class) != null;
  this.skipCleanup=cleansUpWithInterceptor && skipIfCleanupAnnotated;
}
