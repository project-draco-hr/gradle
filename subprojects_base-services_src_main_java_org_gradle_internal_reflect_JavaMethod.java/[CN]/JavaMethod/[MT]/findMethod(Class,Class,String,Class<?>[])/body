{
  for (  Method method : target.getDeclaredMethods()) {
    if (Modifier.isStatic(method.getModifiers())) {
      continue;
    }
    if (method.getName().equals(name) && Arrays.equals(method.getParameterTypes(),paramTypes)) {
      return method;
    }
  }
  Class<?> parent=target.getSuperclass();
  if (parent == null) {
    throw new GradleException(String.format("Could not find method %s(%s) on %s",name,Arrays.toString(paramTypes),origTarget));
  }
 else {
    return findMethod(origTarget,parent,name,paramTypes);
  }
}
