{
  int size=name.length();
  StringBuffer rc=new StringBuffer(size * 2);
  for (int i=0; i < size; i++) {
    char c=name.charAt(i);
    boolean valid=c >= 'a' && c <= 'z';
    valid=valid || (c >= 'A' && c <= 'Z');
    valid=valid || (c >= '0' && c <= '9');
    valid=valid || (c == '_') || (c == '-')|| (c == '.')|| (c == '#')|| (c == '$');
    if (valid) {
      rc.append(c);
    }
 else {
      rc.append('#');
      rc.append(Integer.toHexString(c));
    }
  }
  return rc.toString();
}
