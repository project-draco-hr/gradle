{
  testFile("build.gradle").writelns("task withDescription { description = 'value' }","task(asMethod)\n{ description = 'value' }","task asStatement(type: TestTask) { property = 'value' }","task \"dynamic\"(type: TestTask) { property = 'value' }","v = task(asExpression, type: TestTask) { property = 'value' }","task(postConfigure, type: TestTask).configure { property = 'value' }","[asStatement, dynamic, asExpression, postConfigure].each { ","    assert 'value' == it.property","}","[withDescription, asMethod].each {","    assert 'value' == it.description","}","task all(dependsOn: tasks as List)","class TestTask extends DefaultTask { String property }");
  inTestDirectory().withTasks("all").run();
}
