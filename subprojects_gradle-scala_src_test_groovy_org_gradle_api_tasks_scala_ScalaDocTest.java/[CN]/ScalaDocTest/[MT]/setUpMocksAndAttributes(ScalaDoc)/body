{
  docTask.source(srcDir);
  docTask.setDestinationDir(destDir);
  docTask.setScalaClasspath(context.mock(FileCollection.class));
  docTask.setClasspath(context.mock(FileCollection.class));
  context.checking(new Expectations(){
{
      one(antScalaDocMock).execute(with(hasSameItems(scalaDoc.getSource())),with(equalTo(scalaDoc.getDestinationDir())),with(equalTo(scalaDoc.getClasspath())),with(equalTo(scalaDoc.getScalaClasspath())),with(sameInstance(scalaDoc.getScalaDocOptions())));
    }
  }
);
}
