{
  lock.lock();
  String originalValue=System.getProperty(propertyName);
  System.setProperty(propertyName,value);
  try {
    runnable.run();
  }
  finally {
    if (originalValue != null) {
      System.setProperty(propertyName,originalValue);
    }
 else {
      System.clearProperty(propertyName);
    }
    lock.unlock();
  }
}
