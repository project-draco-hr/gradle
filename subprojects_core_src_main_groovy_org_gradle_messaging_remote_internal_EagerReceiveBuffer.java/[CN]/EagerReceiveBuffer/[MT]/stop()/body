{
  lock.lock();
  try {
    doRequestStop();
  }
  finally {
    lock.unlock();
  }
  try {
    onReceiversExhaustedFinishedLatch.await();
  }
 catch (  InterruptedException e) {
    throw UncheckedException.asUncheckedException(e);
  }
  lock.lock();
  try {
    asyncReceive.stop();
    setState(State.Stopped);
  }
  finally {
    lock.unlock();
  }
}
