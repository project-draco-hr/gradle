{
  try {
    lock.lock();
    try {
      requestStop();
      connections.waitForConnectionsToComplete();
      outgoingQueue.discardQueued();
    }
  finally {
      lock.unlock();
    }
    workers.stop();
  }
  finally {
    lock.lock();
    try {
      state=State.Stopped;
    }
  finally {
      lock.unlock();
    }
  }
}
