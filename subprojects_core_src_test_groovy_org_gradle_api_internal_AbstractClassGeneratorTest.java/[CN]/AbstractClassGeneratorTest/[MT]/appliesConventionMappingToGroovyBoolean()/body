{
  BeanWithGroovyBoolean bean=generator.generate(BeanWithGroovyBoolean.class).newInstance();
  assertTrue(bean instanceof IConventionAware);
  assertThat(bean.getB(),equalTo(false));
  IConventionAware conventionAware=(IConventionAware)bean;
  conventionAware.getConventionMapping().map("b",new Callable<Object>(){
    public Object call() throws Exception {
      return true;
    }
  }
);
  assertThat(bean.isB(),equalTo(true));
  assertThat(bean.getB(),equalTo(true));
  bean.setB(false);
  assertThat(bean.isB(),equalTo(false));
  assertThat(bean.getB(),equalTo(false));
}
