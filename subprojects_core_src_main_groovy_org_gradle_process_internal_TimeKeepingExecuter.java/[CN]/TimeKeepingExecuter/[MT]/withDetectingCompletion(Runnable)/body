{
  return new Runnable(){
    public void run(){
      LOGGER.debug("Running: " + displayName);
      try {
        operation.run();
      }
  finally {
        lock.lock();
        try {
          completed=true;
          condition.signalAll();
        }
  finally {
          lock.unlock();
        }
      }
    }
  }
;
}
