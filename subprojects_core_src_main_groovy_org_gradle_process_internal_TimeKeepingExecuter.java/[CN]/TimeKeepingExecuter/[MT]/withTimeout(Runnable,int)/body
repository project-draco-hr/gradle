{
  return new Runnable(){
    public void run(){
      try {
        lock.lock();
        if (completed) {
          return;
        }
        condition.await(timeoutMillis,TimeUnit.MILLISECONDS);
        if (!completed) {
          LOGGER.debug("Timeout ({} millis) hit while running {}.",timeoutMillis,displayName);
          onTimeout.run();
        }
      }
 catch (      InterruptedException e) {
      }
 finally {
        lock.unlock();
      }
    }
  }
;
}
