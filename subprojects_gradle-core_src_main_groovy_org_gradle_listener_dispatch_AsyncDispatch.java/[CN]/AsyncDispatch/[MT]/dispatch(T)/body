{
  lock.lock();
  try {
    while (state == State.Init && queue.size() >= maxQueueSize) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw new GradleException(e);
      }
    }
    if (state == State.Stopped) {
      throw new IllegalStateException("This message dispatch has been stopped.");
    }
    queue.add(message);
    condition.signalAll();
  }
  finally {
    lock.unlock();
  }
}
