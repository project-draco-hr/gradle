{
  lock.lock();
  try {
    while (!closed && queue.size() >= MAX_QUEUE_SIZE) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw new RuntimeException(e);
      }
    }
    if (closed) {
      throw new IllegalStateException("This message dispatch has been closed.");
    }
    queue.add(message);
    condition.signalAll();
  }
  finally {
    lock.unlock();
  }
}
