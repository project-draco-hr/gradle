{
  lock.lock();
  try {
    setState(State.Stopped);
    Date expiry=new Date(System.currentTimeMillis() + (120 * 1000));
    while (targets > 0) {
      try {
        if (!condition.awaitUntil(expiry)) {
          throw new IllegalStateException("Timeout waiting for messages to be flushed.");
        }
      }
 catch (      InterruptedException e) {
        throw new GradleException(e);
      }
    }
    if (!queue.isEmpty()) {
      throw new IllegalStateException("Cannot wait for messages to be flushed, as there are no dispatch threads.");
    }
  }
  finally {
    lock.unlock();
  }
}
