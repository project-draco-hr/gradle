{
  DefaultMavenPom pom=new DefaultMavenPom(project.getConfigurations(),new DefaultConf2ScopeMappingContainer(conf2ScopeMappings.getMappings()),new DefaultPomDependenciesConverter(new DefaultExcludeRuleConverter()),((ProjectInternal)project).getFileResolver());
  pom.setGroupId(project.getGroup().toString());
  pom.setArtifactId(project.getName());
  pom.setVersion(project.getVersion().toString());
  return ConfigureUtil.configure(configureClosure,pom);
}
