{
  lock.lock();
  try {
    for (    ProtocolStack<Message> stack : outgoingUnicasts.values()) {
      stack.requestStop();
    }
    for (    ProtocolStack<Message> stack : outgoingBroadcasts.values()) {
      stack.requestStop();
    }
    for (    ProtocolStack<?> worker : workers) {
      worker.requestStop();
    }
  }
  finally {
    lock.unlock();
  }
}
