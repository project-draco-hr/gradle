{
  executor.execute(new Runnable(){
    public void run(){
      requestStop();
      new CompositeStoppable(stack,connection,incomingDemux).stop();
    }
  }
);
  try {
    executor.stop(120,TimeUnit.SECONDS);
  }
 catch (  Throwable e) {
    throw new GradleException("Could not stop connection.",e);
  }
}
