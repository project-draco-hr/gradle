{
  actionLock.lock();
  try {
    if (disconnectAction != null) {
      disconnectAction.execute(new Disconnection(){
        public Connection<T> getConnection(){
          return DisconnectAwareConnectionDecorator.this;
        }
        public List<T> getUncollectedMessages(){
          return uncollectedMessages;
        }
      }
);
    }
  }
  finally {
    actionLock.unlock();
  }
}
