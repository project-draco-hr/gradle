{
  consumerExecutor.execute(new Runnable(){
    public void run(){
      LOGGER.info("starting disconnect aware consumer {}",this);
      while (true) {
        T message=DisconnectAwareConnectionDecorator.super.receive();
        if (message == null) {
          put(null);
          if (!stopped) {
            invokeDisconnectAction();
          }
          break;
        }
 else {
          put(message);
        }
      }
    }
  }
);
}
