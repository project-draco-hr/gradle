{
  ConsumerConnection connection=null;
  lock.lock();
  try {
    stopped=true;
    while (!executing.isEmpty()) {
      try {
        condition.await();
      }
 catch (      InterruptedException e) {
        throw UncheckedException.asUncheckedException(e);
      }
    }
    connection=this.connection;
    this.connection=null;
  }
  finally {
    lock.unlock();
  }
  if (connection != null) {
    connection.stop();
  }
}
