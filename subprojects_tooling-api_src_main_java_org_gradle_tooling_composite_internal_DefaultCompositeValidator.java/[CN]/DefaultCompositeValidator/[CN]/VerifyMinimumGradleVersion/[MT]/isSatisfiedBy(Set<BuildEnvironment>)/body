{
  return CollectionUtils.every(buildEnvironments,new Spec<BuildEnvironment>(){
    @Override public boolean isSatisfiedBy(    BuildEnvironment buildEnvironment){
      boolean meetsMinimum=minimumVersion.compareTo(VersionNumber.parse(buildEnvironment.getGradle().getGradleVersion())) < 0;
      if (!meetsMinimum) {
        reason.append("Composite builds require Gradle 1.0 or newer. A project is configured to use ").append(buildEnvironment.getGradle().getGradleVersion()).append(", which is too old to be used in a composite.").append(SystemProperties.getInstance().getLineSeparator());
      }
      return meetsMinimum;
    }
  }
);
}
