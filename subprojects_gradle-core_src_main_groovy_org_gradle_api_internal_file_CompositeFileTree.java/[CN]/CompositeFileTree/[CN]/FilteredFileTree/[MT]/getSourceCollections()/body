{
  List<FileTree> filteredSets=new ArrayList<FileTree>();
  for (  FileTree set : CompositeFileTree.this.getSourceCollections()) {
    if (closure != null) {
      filteredSets.add(set.matching(closure));
    }
 else {
      filteredSets.add(set.matching(patterns));
    }
  }
  return filteredSets;
}
