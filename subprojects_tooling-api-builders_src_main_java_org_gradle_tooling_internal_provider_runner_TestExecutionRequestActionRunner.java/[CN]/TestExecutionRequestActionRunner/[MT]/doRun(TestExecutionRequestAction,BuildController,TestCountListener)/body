{
  TestExecutionBuildConfigurationAction testTasksConfigurationAction=new TestExecutionBuildConfigurationAction(action.getTestExecutionRequest(),buildController.getGradle(),testCountListener);
  @SuppressWarnings("unchecked") ReplaceBuildConfigurationTransformer replaceBuildConfigurationTransformer=new ReplaceBuildConfigurationTransformer(testTasksConfigurationAction,Lists.newArrayList(TaskNameResolvingBuildConfigurationAction.class,DefaultTasksBuildExecutionAction.class));
  buildController.registerBuildConfigurationTransformer(replaceBuildConfigurationTransformer);
  buildController.run();
}
