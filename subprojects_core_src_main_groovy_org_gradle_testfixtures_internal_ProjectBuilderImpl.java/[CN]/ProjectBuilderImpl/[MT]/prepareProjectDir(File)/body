{
  if (projectDir == null) {
    try {
      projectDir=GFileUtils.canonicalise(File.createTempFile("gradle","projectDir"));
      projectDir.delete();
      projectDir.mkdir();
      projectDir.deleteOnExit();
    }
 catch (    IOException e) {
      throw new UncheckedIOException(e);
    }
  }
 else {
    projectDir=GFileUtils.canonicalise(projectDir);
  }
  return projectDir;
}
