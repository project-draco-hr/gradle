{
  String explicitProjectPath=startParameter.getProjectPath();
  File explicitProjectDir=startParameter.getProjectDir();
  File explicitBuildFile=startParameter.getBuildFile();
  ProjectSpec spec=explicitProjectPath != null ? new ProjectPathProjectSpec(explicitProjectPath) : explicitBuildFile != null ? new BuildFileProjectSpec(explicitBuildFile) : explicitProjectDir == null ? new DefaultProjectSpec(startParameter.getCurrentDir()) : new ProjectDirectoryProjectSpec(explicitProjectDir);
  return spec;
}
