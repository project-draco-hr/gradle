{
  try {
    output.getParentFile().mkdirs();
    OutputStream outputStream=new FileOutputStream(output);
    try {
      SimpleXmlWriter xmlWriter=new SimpleXmlWriter(outputStream,"  ");
      writeTo(descriptor,xmlWriter);
      xmlWriter.flush();
    }
  finally {
      outputStream.close();
    }
  }
 catch (  IOException e) {
    throw new UncheckedIOException(e);
  }
}
