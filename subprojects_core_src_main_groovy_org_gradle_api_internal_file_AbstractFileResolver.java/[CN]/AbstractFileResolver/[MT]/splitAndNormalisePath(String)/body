{
  String[] segments=FILE_SEPARATOR_PATTERN.split(filePath);
  List<String> path=new ArrayList<String>(segments.length);
  for (  String segment : segments) {
    if (segment.equals("..")) {
      if (!path.isEmpty()) {
        path.remove(path.size() - 1);
      }
    }
 else     if (!segment.equals(".") && segment.length() > 0) {
      path.add(segment);
    }
  }
  return path;
}
