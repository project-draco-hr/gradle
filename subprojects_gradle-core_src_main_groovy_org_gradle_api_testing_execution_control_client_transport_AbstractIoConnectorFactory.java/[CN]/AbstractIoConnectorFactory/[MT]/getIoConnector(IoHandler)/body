{
  if (handler == null)   throw new IllegalArgumentException("The handler that needs to be called when messages are received on the 'network' communication connector can't be null!");
  final T connector=instanciateIoConnector();
  connector.getFilterChain().addLast("codec",new ProtocolCodecFilter(new ObjectSerializationCodecFactory()));
  connector.setHandler(handler);
  return connector;
}
