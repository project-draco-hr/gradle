{
  GradleLauncherActionExecuter<ProviderOperationParameters> executer=createExecuter(operationParameters);
  ConfiguringBuildAction<T> configuringAction=new ConfiguringBuildAction<T>(operationParameters.getGradleUserHomeDir(),operationParameters.getProjectDir(),operationParameters.isSearchUpwards(),operationParameters.getVerboseLogging(),action);
  return executer.execute(configuringAction,operationParameters);
}
