{
  if (widget == textArea) {
    throw new UnsupportedOperationException();
  }
  if (widget == statusBar) {
    render(new Action<Ansi>(){
      public void execute(      Ansi ansi){
        statusBar.onDeactivate(ansi);
        textArea.onActivate(ansi);
        statusBar=null;
      }
    }
);
  }
}
