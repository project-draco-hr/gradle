{
  try {
    byte[] bytes=new byte[8];
    DatagramPacket packet=new DatagramPacket(bytes,bytes.length);
    socket.receive(packet);
    return decode(bytes);
  }
 catch (  IOException e) {
    if (!stopped) {
      throw new RuntimeException(e);
    }
    throw new GracefullyStoppedException();
  }
}
