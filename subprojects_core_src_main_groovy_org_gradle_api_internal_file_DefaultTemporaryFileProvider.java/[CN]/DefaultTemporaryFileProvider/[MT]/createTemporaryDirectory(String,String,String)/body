{
  File dir=new File(baseDirFactory.create(),CollectionUtils.join("/",path));
  GFileUtils.createDirectory(dir);
  try {
    File tmpDir=File.createTempFile("gradle","projectDir",dir);
    tmpDir.delete();
    tmpDir.mkdir();
    return tmpDir;
  }
 catch (  IOException e) {
    throw new UncheckedIOException(e);
  }
}
