{
  File classesDir=classesDir(cache);
  ProgressLogger op=progressLoggerFactory.newOperation(DefaultScriptCompilationHandler.class).start("Compile script " + source + "into cache","Compiling script into cache");
  try {
    scriptCompilationHandler.compileToDir(source,classLoader,classesDir,transformer,scriptBaseClass);
  }
  finally {
    op.completed();
  }
}
