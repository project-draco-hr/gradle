{
  if (connection == null) {
    Class.forName("org.h2.Driver");
    connection=DriverManager.getConnection(getUrl(),getUserName(),getPassword());
    try {
      schemaInitializer.execute(connection);
    }
 catch (    Exception e) {
      connection.close();
      connection=null;
      throw e;
    }
  }
  return action.execute(connection);
}
