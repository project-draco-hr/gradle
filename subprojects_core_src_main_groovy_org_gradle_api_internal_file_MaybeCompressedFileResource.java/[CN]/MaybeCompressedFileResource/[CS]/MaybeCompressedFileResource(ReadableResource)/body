{
  String ext=FilenameUtils.getExtension(resource.getURI().toString());
  if (Compression.BZIP2.getExtension().equals(ext) || Compression.BZ2.getExtension().equals(ext)) {
    this.resource=new Bzip2Archiver(resource);
  }
 else   if (Compression.GZIP.getExtension().equals(ext) || Compression.GZ.getExtension().equals(ext)) {
    this.resource=new GzipArchiver(resource);
  }
 else {
    this.resource=resource;
  }
}
