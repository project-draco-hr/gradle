{
  byte[] buffer=new byte[2048];
  try {
    while (true) {
      int nread=source.read(buffer);
      if (nread < 0) {
        break;
      }
      destination.write(buffer,0,nread);
      destination.flush();
    }
    new CompositeStoppable(source,destination).stop();
  }
 catch (  IOException e) {
    throw new RuntimeException("Problems handling process' streams.",e);
  }
}
