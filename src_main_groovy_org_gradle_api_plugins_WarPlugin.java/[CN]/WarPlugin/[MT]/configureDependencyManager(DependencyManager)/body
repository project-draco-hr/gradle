{
  dependencyManager.addConfiguration(new Configuration(PROVIDED_COMPILE,Configuration.Visibility.PRIVATE,null,null,true,null));
  dependencyManager.addConfiguration(new Configuration(PROVIDED_RUNTIME,Configuration.Visibility.PRIVATE,null,new String[]{PROVIDED_COMPILE},true,null));
  dependencyManager.configuration(JavaPlugin.COMPILE).extendsFrom(new String[]{PROVIDED_COMPILE});
  dependencyManager.configuration(JavaPlugin.RUNTIME).extendsFrom(new String[]{PROVIDED_RUNTIME});
  configureMavenScopeMappings(dependencyManager.getMaven());
}
